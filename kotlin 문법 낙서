for(i in 1..5){
	println(i)
} //1 2 3 4 5
for(i in 6 downTo 0 step 2){
	println(i)
	6 4 2 0
}
for (i in 1..5 step 3){
	//1 4
}
apply 객체 초기화
var person = Person().apply{
	firstName = "fast"
	lastName = "Campus"
}
Person person = new Person();
this.firstName = "fast"
